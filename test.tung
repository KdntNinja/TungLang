# This is a comment

# Variable assignments with different types
var x = 42
var name = "TungLang"
var is_active = true

# Arithmetic operations
var sum = x + 8
var difference = x - 2
var product = x * 2
var quotient = x / 7

# String concatenation
var greeting = "Hello, " + name

# Print values
tung("=== Basic Values ===")
tung("x:", x)
tung("name:", name)
tung("is_active:", is_active)

tung("=== Arithmetic Operations ===")
tung("sum:", sum)
tung("difference:", difference)
tung("product:", product)
tung("quotient:", quotient)
tung("string:", greeting)

# Comparison operators
tung("=== Comparisons ===")
tung("x == 42:", x == 42)
tung("x != 0:", x != 0)
tung("x < 50:", x < 50)
tung("x > 30:", x > 30)
tung("x <= 42:", x <= 42)
tung("x >= 42:", x >= 42)

# If statement testing using la_vaca alias
tung("=== If Statements ===")
la_vaca x > 40:
    tung("x is greater than 40")
fine_vaca

la_vaca x < 10:
    tung("This won't be printed")
fine_vaca

# Nested if statements using aliases
la_vaca is_active:
    tung("Testing nested if:")
    la_vaca x == 42:
        tung("x is exactly 42")
    fine_vaca
fine_vaca

print("DONE!!")